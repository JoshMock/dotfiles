#!/usr/bin/env bash

current=$(date +%M)
replace=''

remind() {
  time=$1
  replace_id=$2
  urgency='normal'

  if [[ $time == 2 ]]; then
    urgency='critical'
  fi

  if [[ -z "$replace_id" ]]; then
    replace=$(gcalcli --calendar joshua.mock@elastic.co remind "$time" "notify-send --expire-time 14400000 --print-id -u $urgency -a gcalcli %s")
  else
    replace=$(gcalcli --calendar joshua.mock@elastic.co remind "$time" "notify-send --expire-time 14400000 --print-id --replace-id=$replace_id -u $urgency -a gcalcli %s")
  fi
}

if [[ "$current" == '00' ]] || [[ "$current" == '30' ]]; then
  remind 60 "$replace"
fi

if [[ ${current:1:1} == '0' ]]; then
  remind 10 "$replace"
  remind 5 "$replace"
fi

if [[ ${current:1:1} == '5' ]]; then
  remind 5 "$replace"
fi

remind 2 "$replace"
